<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Sign up</h1>

            <form action="/signup" method="POST">
                <div class='form-group'>
                    <label for='username'>Username</label>
                    <input name='username' type='text' class='form-control' placeholder='Username' id='username'>
                </div>
                <div class='form-group'>
                    <label for='name'>Name</label>
                    <input name='name' type='text' class='form-control' placeholder='Name' id='name'>
                </div>
                <div class='form-group'>
                    <label for='password'>Password</label>
                    <input name='password' type='password' class='form-control' placeholder='Enter password'
                        id='password'>
                </div>
                <div class='form-group'>
                    <label for='profileImg'>Profile Image</label>
                    <input name='profileImg' type='profileImg' class='form-control' id='profileImg'>
                </div>
                <div class='form-group'>
                    <label for='description'>Description</label>
                    <input name='description' type='text' class='form-control' placeholder='Description' id='description'>
                </div>
                <div class='form-group'>
                    <label for='facebookId'>Facebook ID</label>
                    <input name='facebookId' type='text' class='form-control' placeholder='Enter facebook ID' id='facebookId'>
                </div>
                <div class='form-group'>
                    <label for='role'>Role</label>
                    <select name="role" id="" class='form-control'>
                        <option value="DEV">DEV</option>
                        <option value="TA">TA</option>
                        <option value="STUDENT">STUDENT</option>
                        <option value="GUEST">GUEST</option>
                        <option value="BOSS">BOSS</option>
                    </select>
                </div>
                
                <button type='submit' class='btn btn-dark btn-block'>Sign up</button>
                {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}} 
            </form>

        </div>
    </div>
</div>